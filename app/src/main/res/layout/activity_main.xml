<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="CAD"

            android:layout_width="198dp"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cadText"
            android:gravity="center" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <TextView
            android:text="GBP"
            android:layout_width="199dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gbpText"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="188dp"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/usdText"/>
    <TextView
            android:text="CHF"
            android:layout_width="212dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/chfText"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/usdText" android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/tryText"/>
    <TextView
            android:text="USD"
            android:layout_width="211dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/usdText"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintTop_toBottomOf="@+id/gbpText" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/chfText"/>
    <TextView
            android:text="TRY"
            android:layout_width="205dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tryText"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/chfText" android:layout_marginBottom="77dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="get rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="getRates" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tryText" android:layout_marginEnd="39dp"
            android:layout_marginBottom="85dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>